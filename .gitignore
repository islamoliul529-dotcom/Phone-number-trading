<!DOCTYPE html>
<html lang="bn">
<head>
    <meta charset="UTF-8">
    <title>লোকেশন ট্র্যাকার</title>
    <style>
        body { font-family: Arial, sans-serif; text-align: center; padding: 50px; background-color: #f4f4f4; }
        button { padding: 15px 25px; font-size: 18px; background-color: #007bff; color: white; border: none; border-radius: 5px; cursor: pointer; }
    </style>
</head>
<body>
    <h1>আমার বর্তমান লোকেশন</h1>
    <button onclick="getLocation()">লোকেশন দেখুন</button>
    <p id="result"></p>

    <script>
        function getLocation() {
            if (navigator.geolocation) {
                navigator.geolocation.getCurrentPosition(function(position) {
                    const lat = position.coords.latitude;
                    const lon = position.coords.longitude;
                    document.getElementById("result").innerHTML = "অক্ষাংশ: " + lat + "<br>দ্রাঘিমাংশ: " + lon;
                    window.open(`https://www.google.com/maps?q=${lat},${lon}`, '_blank');
                });
            } else {
                alert("আপনার ব্রাউজার লোকেশন সাপোর্ট করে না।");
            }
        }
    </script>
</body>
</html>
